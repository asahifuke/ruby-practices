# frozen_string_literal: true

require 'rake/clean'

CC      = 'gcc'
SOURCES = FileList['**/*.c']
OBJECTS = SOURCES.ext('o')

task 'default' => 'calculate_square_area'

file 'calculate_square_area' => OBJECTS do |t|
  sh "#{CC} -o #{t.name} #{t.prerequisites.join(' ')}"
end

rule '.o' => '.c' do |t|
  sh "#{CC} -c #{t.source}"
end
